---
import Layout from '../layouts/Layout.astro';
import { getChapterName, getChapters } from '../lib/chapter';

const chapters = await getChapters();
---

<Layout title="@napkin-community/solutions">
  <ol>
    {
      chapters.map((chapter) => (
        <li>
          <a href={`./${chapter.id}`}>{getChapterName(chapter.id)}</a>
        </li>
      ))
    }
  </ol>
</Layout>

<style>
  ol {
    list-style: none;
    width: calc(100svw - 2 * 2rem);
    padding: 2rem;
    display: grid;
    gap: 2rem;
    grid-template-columns: repeat(auto-fill, minmax(8rem, 1fr));
  }
  li {
    aspect-ratio: 3 / 4;
    border: 2px solid black;
    border-radius: 0.25rem;
    font-size: 2rem;
  }
  li > a {
    width: calc(100% - 2 * 1rem);
    height: calc(100% - 2 * 1rem);
    padding: 1rem;
    display: flex;
    flex-direction: column;
    align-items: end;
    justify-content: end;
    text-decoration: none;
    color: unset;
  }
</style>
